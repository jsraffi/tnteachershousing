@model IEnumerable<tnteachershousing.ViewModel.ProjectIndexViewModel>

@{
    //ViewBag.Title = "Project List";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //ViewBag.PageHeader = "List of projects";
    Layout = null;
}


<h1 class="pageheader">Project List</h1>

    
<div class="container col-md-10">
    <div class="table-responsive">
    <table class="table table-bordered table-hover fontadmintable">
        <tr style="background-color:lightblue;">
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pincode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th> Operations</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pincode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate, "ShortDateTime")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProjectID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProjectID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProjectID })
                </td>
            </tr>
        }

    </table>
</div>
</div>
     
