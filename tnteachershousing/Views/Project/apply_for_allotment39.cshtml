@{
    ViewBag.Title = "Apply for allotment-TN TEACHERS TRUST | Chennai | Coimbatore | Vilupuram | Chengalpattu";
}

@section allotment_form
{
    <link rel="stylesheet" href="@Url.Content("~/Content/assets/js/form/sky-forms.css")" />

}


<link rel="stylesheet" href="~/Content/assets/js/form/sky-forms-vas.css" />
<link href="~/Content/assets/css/sumoselect.css" rel="stylesheet" />
<style>
    ul.applyallot {
        margin-left: 20px;
    }

        ul.applyallot li {
            text-align: left;
            list-style: inherit;
            list-style-type: disc;
            list-style-position: inside;
        }

    .SumoSelect > .CaptionCont > label > i {
        display: none;
    }

    .SumoSelect > .optWrapper.multiple > .options > li span i:after, .SumoSelect .select-all > span i:after {
        display: none;
    }

    .SumoSelect > .optWrapper.multiple > .options > li span i:before, .SumoSelect .select-all > span i:before {
        display: none;
    }

    .SlectBox {
        width: 850px;
        padding: 8px 8px;
    }

        .SlectBox label {
            font-weight: normal;
        }
</style>

<div class="clearfix"></div>

<!-- Contant
            ======================================= -->

<section class="post-wrapper-top dm-shadow clearfix">
    <div class="container">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <ul class="breadcrumb">
                <li>@Html.ActionLink("Home", "index", "Home", null, new { @style = "color:white" })</li>
                <li>Apply For Allotment</li>
            </ul>
            <h2>Apply For Allotment</h2>
        </div>
    </div>
</section>


<div class="clearfix"></div>

<div class="container">

    <div class="content_fullwidth" style="background:url('/Content/assets/images/allotment-form-bg.jpg'); margin:20px 0;">

        <div class="reg_form" style="width:85%">
            <form id="apply-form" class="sky-form" method="post" action="" novalidate="novalidate">
                <header>Apply For Allotment Form</header>
                <div class="one_half" style="padding-right:35px;">
                    <header><h3><strong>Project</strong> Info</h3></header>
                    <fieldset>
                        <section>
                            <label class="select">
                                <select name="projectId" required>
                                    <option value="">Selected Project</option>
                                    <option value="Teachers Ice Tovarno" selected>
                                        Teachers Ice Tovarno - Saibaba Colony
                                    </option>
                                </select>
                                <i></i>
                            </label>
                            <input type="hidden" name="setId" value="1" />
                        </section>
                    </fieldset>
                    <input type="hidden" name="projType" value="3" />
                    <fieldset>
                        <h3 style="padding-bottom:10px;">Apartments</h3>
                        <section>
                            <label class="select">
                                <select name="reqSize_3[]" class="SlectBox" multiple="multiple" placeholder="Select BHK" required>
                                    <option value="2 BHK">2 BHK </option>
                                    <option value="3 BHK">3 BHK </option>
                                </select>
                                <i></i>
                            </label>
                        </section>
                    </fieldset>

                    <fieldset>
                        <section>
                            <label class="select">
                                <select name="siteVist" required>
                                    <option value="">Interested in Site Visit</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                                <i></i>
                            </label>
                        </section>
                        <section>
                            <label class="select">
                                <select name="interestedIn[]" class="SlectBox" multiple="multiple" placeholder="Interested in Other Projects" required>

                                    <option value="Covai Teachers Colony - Housing">Covai Teachers Colony - Housing</option>

                                    <option value="Teachers Zen Meadows">Teachers Zen Meadows</option>

                                    <option value="Covai Teachers Colony-Plots">Covai Teachers Colony-Plots</option>

                                    <option value="Chengalpet Teachers Colony Extn II">Chengalpet Teachers Colony Extn II</option>

                                    <option value="Teachers Sri Rajarajeshwari Township - Housing (Flats & Villas)">Teachers Sri Rajarajeshwari Township - Housing (Flats & Villas)</option>

                                    <option value="Teachers Sri Rajarajeshwari Township - Farm Plots               :">Teachers Sri Rajarajeshwari Township - Farm Plots               :</option>

                                    <option value="Teachers EDU CITY Hosur">Teachers EDU CITY Hosur</option>
                                </select>
                                <i></i>
                            </label>
                        </section>
                        <section>
                            <label class="select">
                                <select name="investRange" placeholder="Select Investment Range" required>
                                    <option value="">Select Investment Range</option>
                                    <option value="< 10 Lakhs">&lt;10 Lakhs</option>
                                    <option value="10-20 Lakhs">10-20 Lakhs</option>
                                    <option value="20-40 Lakhs">20-40 Lakhs</option>
                                    <option value="40-60 Lakhs">40-60 Lakhs</option>
                                    <option value="60-80 Lakhs">60-80 Lakhs</option>
                                    <option value="80-100 Lakhs">80-100 Lakhs</option>
                                    <option value="Above 1 Crore">Above 1 Crore</option>
                                </select>
                                <i></i>
                            </label>
                        </section>

                        <section>
                            <label class="select">
                                <select name="timeDuration" placeholder="Select Time Duration For Purchase" required>
                                    <option value="">Select Time Duration</option>
                                    <option value="Immediate">Immediate</option>
                                    <option value="< 3 Months">&lt;3 Months</option>
                                    <option value="3-6 Months">3-6 Months</option>
                                    <option value="6-12 Months">6-12 Months</option>
                                    <option value="> 1 Year">&gt; 1 Year</option>
                                </select>
                                <i></i>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <input type="text" name="institution" placeholder="Name & Place of the Institution You Work For" required>
                                <b class="tooltip tooltip-bottom-right">Name & Place of the Institution You Work For</b>
                            </label>
                        </section>
                        <section>
                            <label class="select">
                                <select name="loan_support" required>
                                    <option>Whether loan support required from bank</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                                <i></i>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <input type="text" name="comments" placeholder="Comments If Any" required>
                                <b class="tooltip tooltip-bottom-right">Needed to enter Comments If Any</b>
                            </label>
                        </section>
                    </fieldset>
                </div>
                <div class="one_half last">
                    <header><h3><strong>Personal</strong> Info</h3></header>
                    <fieldset>
                        <section>
                            <label class="input">
                                <input type="text" name="applicantName" placeholder="Name of Applicant" required>
                                <b class="tooltip tooltip-bottom-right">Needed to enter Name</b>
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                <input type="text" name="street_1" placeholder="Street 1" required>
                                <b class="tooltip tooltip-bottom-right">Needed to enter Street 1</b>
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                <input type="text" name="street_2" placeholder="Street 2" required>
                                <b class="tooltip tooltip-bottom-right">Needed to enter Street 2</b>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <input type="text" name="cityName" placeholder="Enter City Name" required>
                                <b class="tooltip tooltip-bottom-right">Needed to enter City</b>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <input type="text" name="stateName" placeholder="Enter State Name" required>
                                <b class="tooltip tooltip-bottom-right">Needed to enter State</b>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <input type="text" name="countryName" placeholder="Enter Country Name" required>
                                <b class="tooltip tooltip-bottom-right">Needed to enter Country</b>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <input type="text" name="pinCode" placeholder="Enter Pin Code" required>
                                <b class="tooltip tooltip-bottom-right">Needed to enter Pin Code</b>
                            </label>
                        </section>

                        <section>
                            <label class="select">
                                <select name="residential" required>
                                    <option value="">Residential Status</option>
                                    <option value="Resident">Resident Indian</option>
                                    <option value="Non Resident">Non Resident Indian</option>
                                </select>
                                <i></i>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <input type="text" name="mobile" placeholder="Enter Mobile Number" required>
                                <b class="tooltip tooltip-bottom-right">Needed to Mobile Number</b>
                            </label>
                        </section>

                        <section>
                            <label class="input">
                                <input type="text" name="phone" placeholder="Enter Phone Number">
                                <b class="tooltip tooltip-bottom-right">Needed to Phone Number</b>
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                <input type="text" name="email" placeholder="Enter Email Id" required>
                                <b class="tooltip tooltip-bottom-right">Needed to Email Id</b>
                            </label>
                        </section>
                    </fieldset>

                </div>
                <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                    <table style="margin:20px; background:#fff; padding:10px; border-radius:5px;">
                        <tr>
                            <td>
                                <b>IMPORTANT TERMS &amp; CONDITIONS :</b>
                                <ul class="applyallot">
                                    <li>Housing sites / plots will be allotted on <b>"first come first serve basis"</b> for all the applications received. </li>
                                    <li>Any excess remaining applications received will be kept under waiting list.  It will be later included for allotment as and when cancellation happens on first come first serve basis only.</li>
                                    <li>The allotment for the applicant who have not paid the payments in stipulated time as per schedule will be cancelled and cancellation charges of Rs. 5,000/- (Rupees Five Thousand Only) will be deducted for administrative services from the payment made already</li>
                                    <li>On balance payment paid within one month the allotted housing plot will be directly registered to the <b>allotee's name</b> respectively.</li>
                                    <li>The booking of allotment of House sites will be made only after payment of Rs.1,00,000/- (Rupees One Lac Only) as advance by way of DD/Cheque in favour of <b>"TAMILNADU TEACHERS HOUSING AND WELFARE TRUST"</b> payable at <b>Chennai.</b></li>
                                    <li> Registration expense is to be borne by the applicant.</li>

                                    <li>These indicated payment schedule and allotment procedure can also vary for Project to Project depending on the nature of ownership of the project. Hence, these allotment procedure and payment schedule are subject to reconfirmation at the time of booking.</li>


                                    <li><b>Rights of plot allotment is subject to approval by the Trust and the managements decision is final.</b> </li>

                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="one_half">
                    <fieldset>
                        <section style="padding-left:50px;">
                            <label>
                                <input type="checkbox" name="copy" id="copy" required>
                                I Agree the terms and conditions above.

                            </label>

                        </section>
                    </fieldset>
                </div>

                <div class="one_half"><button type="submit" name="smt_apl" class="button" style="float:right;">Submit</button></div>
                <footer></footer>
            </form>
        </div>


    </div>

</div>


<div class="clearfix margin_top5"></div>
